<h1>Details</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= detail.content %></td>
        <td><%= link_to 'Show', [@person, detail] %></td>
        <td><%= link_to 'Edit', edit_person_detail_path(@person, detail) %></td>
        <td><%= link_to 'Destroy', [@person, detail], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Detail', new_person_detail_path(@person) %>
<%= link_to 'Back', person_path(@person) %>
